<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_16_dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="id.ac.umn.trashare.DetailEventYayasanActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TableRow>
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/size_24_dp"
                android:textColor="@android:color/black"
                android:text="Judul"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:paddingTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/size_12_dp"
                android:textColor="@android:color/black"
                android:text="Penyelenggara" />

            <TextView
                android:id="@+id/txtPenyelenggara"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/size_12_dp"
                android:textColor="@android:color/black" />
        </TableRow>
        <TableRow
            android:paddingTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/size_12_dp"
                android:textColor="@android:color/black"
                android:text="Deskripsi"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/txtDescription"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:paddingTop="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/size_12_dp"
                android:textColor="@android:color/black"
                android:text="Saran"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:paddingBottom="@dimen/size_10_dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editSaran"
                android:lines="3"
                android:maxLines="5"
                android:background="@drawable/et_bg_black"
                android:inputType="textMultiLine"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnSaran"
                android:text="Kirim"
                android:layout_weight="1"
                android:background="@drawable/green_button"
                android:textSize="@dimen/size_12_dp"
                android:textColor="@color/md_white_1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginLeft="@dimen/size_14_dp"
                android:id="@+id/btnFinish"
                android:text="Selesai"
                android:layout_weight="1"
                android:background="@drawable/green_button"
                android:textSize="@dimen/size_12_dp"
                android:textColor="@color/md_white_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
</LinearLayout>
