<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_20_dp"
    android:gravity="center"
    tools:context="id.ac.umn.trashare.FormRegistrasiBankSampahActivity">

    <!--logo-->
    <LinearLayout android:orientation="vertical">
        <ImageView
            android:layout_width="330dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/logowarna" />
    </LinearLayout>


    <!--judul-->
    <TableRow>
        <TextView
            android:text="FORMULIR PENDAFTARAN BANK SAMPAH"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="30dp"
            android:lines="3"
            android:textSize="13dp" />
    </TableRow>


    <!--nama bank sampah-->
    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:text="Nama Bank Sampah"
            android:textSize="11dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <EditText
            android:textSize="11dp"
            android:textAlignment="center"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/nama_banksampah_edit"
            android:background="@drawable/et_bg_black"
            android:inputType="text"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>


    <!--nama kepala bank sampah-->
    <TableRow
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:text="Nama Ketua"
            android:textSize="11dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <EditText
            android:textSize="11dp"
            android:textAlignment="center"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/nama_ketua_edit"
            android:background="@drawable/et_bg_black"
            android:inputType="text"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>


    <!--alamat-->
    <TableRow
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"
            android:layout_weight="1"/>
        <EditText
            android:textSize="11dp"
            android:textAlignment="center"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/alamat_edit"
            android:textStyle="bold"
            android:background="@drawable/et_bg_black"
            android:inputType="textMultiLine"
            android:layout_weight="1"/>
    </TableRow>



    <!--wilayah-->
    <TableRow
        android:layout_marginTop="10dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wilayah"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"
            android:layout_weight="1"/>
        <Spinner
            android:textSize="11dp"
            android:textAlignment="center"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/spinner_wilayah"
            android:background="@drawable/et_bg_black"
            android:inputType="text"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>


    <!--telepon-->
    <TableRow
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Telepon"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"
            android:layout_weight="1"/>
        <EditText
            android:textSize="11dp"
            android:textAlignment="center"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/telepon_edit"
            android:background="@drawable/et_bg_black"
            android:inputType="text"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>


    <!--email-->
    <TableRow
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"
            android:layout_weight="1"/>
        <EditText
            android:textSize="11dp"
            android:textAlignment="center"
            android:textColor="@color/md_black_1000"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/email_edit"
            android:background="@drawable/et_bg_black"
            android:inputType="text"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>


    <!--button-->
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="16dp">
        <Button
            android:textSize="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="Register"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/green_button"
            android:id="@+id/btnRegister"/>
        <Button
            android:textSize="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="Cancel"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/red_button"
            android:id="@+id/btnCancel"/>
    </LinearLayout>
</TableLayout>
