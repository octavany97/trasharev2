<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="id.ac.umn.trashare.DetailNotifikasiMemberActivity">

    <TableRow>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textSize="@dimen/size_32_dp"
            android:textColor="@color/md_black_1000"
            android:textAlignment="center"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/txtTanggal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textAlignment="center"
            android:textSize="@dimen/size_12_dp"
            android:textColor="@color/md_blue_grey_500"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <ImageView
            android:id="@+id/img_kegiatan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/calender"
            />
    </TableRow>
    <TableRow
        android:paddingTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"
            android:text="Penyelenggara : " />

        <TextView
            android:id="@+id/txtPenyelenggara"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:layout_weight="1"
            android:text="Bank Sampah Melati"
            />
    </TableRow>
    <TableRow
        android:paddingTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:text="Deskripsi : "
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@color/md_black_1000"
            android:id="@+id/txtDescription"
            android:layout_weight="1"
            android:text="Jadwal penimbangan sampah akan dilakukan hari Jumat, 11 Mei 2018 dimulai dari pukul 8 pagi sampai jam 4 sore"/>
    </TableRow>

</TableLayout>
